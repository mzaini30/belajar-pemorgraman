---
import Layout from './__layout.astro'
import Meta from 'astro-meta'
import {ambilKategori} from './_ambilKategori'

const semuaTulisan = Astro.fetchContent('./post/*.md')
const semuaKategori = ambilKategori(semuaTulisan)
---

<Layout>
	<Meta title='Belajar Pemrograman' description='Kamu bisa belajar pemrograman di manapun asalkan numpang wifi' slot='head'/>

	<div slot='body' class='body'>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Festive&display=swap" rel="stylesheet">

		<h1>Belajar Pemrograman</h1>
		<h2>"Kamu bisa belajar pemrograman di manapun asalkan numpang wifi" (Zen, 2021)</h2>
		<div class='list-kelas'>
			{semuaKategori.map(x => <a href={`/kelas/${x}`}>
				<img src={`/ikon/${x}.jpg`} alt={`Kelas ${x}`}>
				<p>Kelas {x}</p>
			</a>)}
		</div>
	</div>
</Layout>

<style>
	.body {
		/*background: #202124;*/
		/*color: #bdc1c6;*/
		@apply min-h-screen bg-gradient-60 text-white <md:(bg-gradient-37) pb-5
	}
	.list-kelas {
		@apply grid grid-cols-10 gap-3 <md:grid-cols-3;
	}
	.list-kelas a {
		@apply rounded bg-blue-300/50 overflow-hidden
	}
	.list-kelas p {
		@apply text-center px-2 py-2
	}
	h1 {
		font-size: 100px;
		font-family: 'Festive', cursive;
		@apply text-center <md:(text-[70px] pt-5);
	}
	h2 {
		@apply text-center pb-5;
		font-family: 'Times New Roman';
	}
</style>
