---
import Meta from 'astro-meta'
import Layout from './__layout.astro'
import Peserta from './_peserta.svelte'
---

<Layout>
	<Meta slot='head' title='Peserta' description='List peserta yang belajar di blog ini
	'></Meta>

	<div class='body' slot='body'>
		<h1>Peserta Belajar Pemrograman</h1>
		<div class="full">
			<Peserta client:load></Peserta>
		</div>
		<a href="/" class='bawah'>cd ..</a>
	</div>
</Layout>

<style>
	.body {
		@apply p-10 <md:p-3;
	}
	h1, .bawah {
		@apply text-3xl pb-5 text-center font-serif block
	}
	.bawah {
		@apply text-base pt-3 underline font-serif
	}
	.full {
		@apply max-w-full overflow-auto
	}
</style>

<style global>
	.full table {
		@apply mx-auto
	}
	.full :where(td, th) {
		@apply border !border-gray-300 px-5 py-1
	}
	.peserta td {
		@apply border border-gray-300 px-5 py-1
	}
	.peserta a {
		@apply underline
	}
</style>
